function plusMinus(arr) {
    let positivo = 0;
    let negativo = 0;
    let zero = 0;
    
    for(let i = 0; i < arr.length; i++){
        if(arr[i] > 0){
            positivo = positivo + 1;
        }else if(arr[i] < 0){
            negativo = negativo + 1;
        }else{
            zero = zero + 1;
        }
    }
        console.log(positivo / arr.length);
        console.log(negativo / arr.length);
        console.log(zero / arr.length);
}
